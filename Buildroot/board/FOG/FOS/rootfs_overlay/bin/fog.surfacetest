#!/bin/bash
. /usr/share/fog/lib/funcs.sh
clearScreen
displayBanner
dots "Location disks"
disks=""
disk=""
hd=""
getHardDisk "true"
if [[ -z $disks ]]; then
    echo "Failed"
    debugPause
    handleError "No hard disks found! ($0)\n   Args Passed: $*"
fi
echo "Done"
debugPause
dots "Attempting to checkin"
res=""
count=0
sysuuid=$(dmidecode -s system-uuid)
sysuuid=${sysuuid,,}
while [[ $res != "##@GO" ]]; do
    res=$(curl -Lks --data "sysuuid=${sysuuid}&mac=$mac" ${web}service/Pre_Stage1.php 2>/dev/null)
    if [[ $count -ge 10 ]]; then
        echo "Failed"
        debugPause
        handleError "Could not checkin. ($0)\n   Args Passed: $*"
    fi
    let count+=1
    usleep 5000000
done
echo "Done"
debugPause
for disk in $disks; do
    dots " * Disk Surface test for $disk"
    usleep 2000000
    badblocks -sv $disk
    echo " * Press [Enter] key to continue"
    read  -p "$*"
done
. /bin/fog.nonimgcomplete
